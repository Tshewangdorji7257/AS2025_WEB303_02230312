FROM golang:1.24-alpine AS builder 
WORKDIR /app
COPY go.mod go.sum ./
# ENV GOPROXY=direct
# ENV GOSUMDB=off
# RUN apk add --no-cache git
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/server ./time-service/main.go

FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/server .
EXPOSE 50052
CMD ["/app/server"]